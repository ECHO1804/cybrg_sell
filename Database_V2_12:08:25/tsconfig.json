{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings - MIGRATIONS NEED COMMONJS ðŸ‘‡
    "module": "commonjs",                    // ðŸ‘ˆ ADD THIS (replaces nodenext)
    "moduleResolution": "node",              // ðŸ‘ˆ CHANGE to node
    "target": "esnext",
    "types": [],

    // SEQUELIZE DECORATORS
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // IMPORT FIXES
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}
